<root>
	<global>
		<namespace value="br.com.project.example.ui.sessions" />
	</global>
	
	<base>
		<dependencies>
			<item name="movieclipbase" value="{swfPath}base.swf" />
			<item name="fonts" value="{swfPath}fonts.swf" />
			<item name="config" value="{configPath}base.txt" />
			<item name="locale" value="{defaultLocalePath}locale.xml" />
		</dependencies>
		<params>
			<linkage id="bg" value="lib_square" />
			<linkage id="helveticaBlack" value="lib_HelveticaNeueBlackExt" />
			<linkage id="helveticaBlackItalic" value="lib_HelveticaNeueBlackExtItalic" />
		</params>
	</base>
	
	<sessions useDeeplink="true" defaultSessionId="subArea4">

		<session id="session1" deeplink="/session1/" className="{namespace}.session1.Session1">
			<dependencies>
				<item name="holder" value="{swfPath}session1.swf" />
			</dependencies>
			<params>
				<linkage id="session" value="lib_session" />
			</params>
		</session>
		<session id="session2" deeplink="/session2/" className="{namespace}.session1.Session1"> <!-- overlay="true" -->
			<dependencies>
				<item name="holder" value="{swfPath}session2.swf" />
			</dependencies>
			<params>
				<linkage id="session" value="lib_session" />
			</params>
		</session>
		<session id="session3" deeplink="/session3/" className="{namespace}.session3.Session3" redirect="subArea1">
			<dependencies>
				<item name="holder" value="{swfPath}session3.swf" />
				<item name="config" value="{configPath}session3.txt" />
			</dependencies>
			<params>
				<linkage id="session" value="lib_session" />
				<linkage id="thumbOver" value="lib_thumb_over" />
			</params>
			
			<!-- itens de uma seção (interações relacionadas a um deeplink), cada tag, adiciona um deeplink na navigation -->
			<content id="subArea1" deeplink="sub-area1" className="{namespace}.session3.Item" >
				<dependencies>
					<item name="imagem" value="{imgPath}imagem1.jpg" />
				</dependencies>
				<params>
					<address id="destination" value="/session3/sub-area1/" />
				</params>
			</content>
			<content id="subArea2" deeplink="sub-area2" className="{namespace}.session3.Item" >
				<dependencies>
					<item name="imagem" value="{imgPath}imagem2.jpg" />
				</dependencies>
				<params>
					<address id="destination" value="/session3/sub-area2/" />
				</params>
			</content>
			<content id="subArea3" deeplink="sub-area3" className="{namespace}.session3.Item" >
				<dependencies>
					<item name="imagem" value="{imgPath}imagem3.jpg" />
				</dependencies>
				<params>
					<address id="destination" value="/session3/sub-area3/" />
				</params>
			</content>
			<content id="subArea4" deeplink="sub-area4" className="{namespace}.session3.Item" >
				<dependencies>
					<item name="imagem" value="{imgPath}imagem4.jpg" />
				</dependencies>
				<params>
					<address id="destination" value="/session3/sub-area4/" />
				</params>
			</content>
			
			<!-- apenas redirects, não cria histórico e não manda pro analytics -->
			<content id="subAreaRedirect1" deeplink="subarea1" redirect="subArea1" />
			<content id="subAreaRedirect2" deeplink="subarea2" redirect="subArea2" />
			<content id="subAreaRedirect3" deeplink="subarea3" redirect="subArea3" />
			<content id="subAreaRedirect4" deeplink="subarea4" redirect="subArea4" />

		</session>
	</sessions>
</root>